configuration{
    display-drun: "Applications:";
    drun-display-format: "{name}";
}

@import "global.rasi"

* {
    background-color:      @primaryBackground;
    border-color:          White;
    text-color:           @primaryForeground;
    font: @font1;
    font-size: 14;
    gp: 5px;
}


window {
    anchor:     north;
    location:   north;
    width:      100%;
    children:   [ horibox ];
}

horibox {
    orientation: horizontal;
    children:   [ prompt, entry ];
}

prompt{
    text-color: @accent;
    padding: @gp;
}

entry {
    expand: false;
    width:   90%;
    padding: @gp;
    placeholder: "Search";
}
