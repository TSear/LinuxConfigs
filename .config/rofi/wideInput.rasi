@import "global.rasi"

* {
    background-color:      @primaryBackground;
    border-color:          White;
    text-color:           @primaryForeground;
    font: @font1;
    font-size: 14;
}

window {
    anchor:     south;
    location:   south;
    width:      100%;
    children:   [ horibox ];
    height: 30px;
}

horibox {
    orientation: horizontal;
    children:   [ prompt, entry];
}

prompt{
    padding: 0.5%;
    width: 10%;
    text-color: @accent;
}

entry{
    height: 100%;
    padding: 0.5%;
}
